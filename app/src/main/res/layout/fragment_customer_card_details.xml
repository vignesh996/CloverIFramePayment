<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="customerCardDetailsViewModel"
            type="com.example.mycloverpayment.customercarddetails.CustomerCardDetailsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp">

            <EditText
                android:id="@+id/first6_card_number"
                android:layout_marginTop="15dp"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:hint="First 6 digit CardNumber"
                android:inputType="number"/>

            <EditText
                android:id="@+id/last4_card_number"
                android:layout_marginTop="15dp"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:hint="Last 4 digit card number"
                android:inputType="number"/>

            <EditText
                android:id="@+id/first_name"
                android:layout_marginTop="15dp"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:hint="First Name"/>

            <EditText
                android:id="@+id/last_name"
                android:layout_marginTop="15dp"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:hint="Last Name"/>

            <EditText
                android:id="@+id/customer_exp_date"
                android:layout_marginTop="15dp"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:hint="Exp.Date"/>

            <EditText
                android:id="@+id/card_type"
                android:layout_marginTop="15dp"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:hint="Card Type"/>

            <EditText
                android:id="@+id/email"
                android:layout_marginTop="15dp"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:hint="Enter your Email"/>

            <EditText
                android:id="@+id/mobile_number"
                android:layout_marginTop="15dp"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:hint="Enter your Mobile Number"/>
            <Button
                android:id="@+id/create_customer_btn"
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="Create Customer"
                android:layout_marginLeft="300dp"
                android:backgroundTint="@color/green"
                android:textColor="@color/black"/>
        </LinearLayout>


    </LinearLayout>
</layout>

